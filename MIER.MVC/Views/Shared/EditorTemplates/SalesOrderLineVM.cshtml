
@model MIER.MVC.ViewModels.SalesOrder.SalesOrderLineVM

<div class="row line-set">
    @Html.HiddenFor(m => m.Id, new { @class = "line-id" })
    @Html.HiddenFor(m => m.IsActive, new { @class = "isActive" })

    <div class="col-2">
        <div class="form-group">
            <label asp-for="Name"></label>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control m-input", @list = "browsers" })
            <span class="form-text text-muted">Nama barang</span>
            @Html.ValidationMessageFor(m => m.Name, String.Empty, new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-3">
        <div class="form-group">
            <label asp-for="Description"></label>
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control m-input", @rows = "3" })
            <span class="form-text text-muted">Bahan, ketebalan, dimensi, finishing</span>
        </div>
    </div>

    <div class="col-1">
        <div class="form-group">
            <label asp-for="MaterialId"></label>
            @*@Html.TextAreaFor(m => m.Description, new { @class = "form-control m-input", @rows = "3" })*@
            <span class="form-text text-muted">Bahan, ketebalan, dimensi, finishing</span>
        </div>
    </div>

    <div class="col-1">
        <div class="form-group">
            <label asp-for="MachineId"></label>
            @*@Html.TextAreaFor(m => m.Description, new { @class = "form-control m-input", @rows = "3" })*@
            <span class="form-text text-muted">Bahan, ketebalan, dimensi, finishing</span>
        </div>
    </div>

    <div class="col-1">
        <div class="form-group">
            <label asp-for="Quantity"></label>
            @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control input-sm line-calculation" })
            @Html.ValidationMessageFor(m => m.Quantity, String.Empty, new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-2">
        <div class="form-group">
            <label asp-for="Price"></label>
            @Html.TextBoxFor(m => m.Price, new { @class = "form-control input-sm line-calculation" })
            @Html.ValidationMessageFor(m => m.Price, String.Empty, new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-2">
        <div class="form-group">
            <label asp-for="Amount"></label>
            <div class="input-group">
                @Html.TextBoxFor(m => m.Amount, new { @class = "form-control bg-light-primary calc line-amount" })
                &nbsp;&nbsp;
                <button id="DeleteLineButton" name="DeleteLine[0]" class="btn btn-text-danger btn-sm delete-line" title="Delete Line"><i class="fa fa-trash-alt"></i></button>
            </div>
        </div>
    </div>

</div>