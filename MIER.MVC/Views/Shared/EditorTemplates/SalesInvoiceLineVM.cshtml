
@model MIER.MVC.ViewModels.SalesInvoice.SalesInvoiceLineVM

<div class="row line-set">
    @Html.HiddenFor(m => m.Id, new { @class = "line-id" })

    <div class="col-3">
        <div class="form-group">
            <label asp-for="Name"></label>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control bg-light-primary", @list = "browsers", @readonly = true })
        </div>
    </div>
    <div class="col-4">
        <div class="form-group">
            <label asp-for="Description"></label>
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control bg-light-primary", @rows = "3", @readonly = true })
        </div>
    </div>
    <div class="col-1">
        <div class="form-group">
            <label asp-for="Quantity"></label>
            @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control bg-light-primary", @readonly = true })
        </div>
    </div>
    <div class="col-2">
        <div class="form-group">
            <label asp-for="Price"></label>
            @Html.TextBoxFor(m => m.Price, new { @class = "form-control bg-light-primary", @readonly = true })
        </div>
    </div>
    <div class="col-2">
        <div class="form-group">
            <label asp-for="Amount"></label>
            <div class="input-group">
                @Html.TextBoxFor(m => m.Amount, new { @class = "form-control bg-light-primary", @readonly = true })
            </div>
        </div>
    </div>
</div>