
@using MIER.MVC.ViewModels.Machine
@model MachineVM

@{
    ViewData["Title"] = "Create Machine";
}

<!--begin:PageHeader-->
<div class="subheader py-2 py-lg-4 subheader-solid" id="kt_subheader">
    <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <!--begin:PageInfo-->
        <div class="d-flex align-items-center flex-wrap mr-2">
            <!--begin::Page Title-->
            <h5 class="text-dark font-weight-bold mt-2 mb-2 mr-5">Machine</h5>
            <!--end::Page Title-->
            <!--begin:Actions-->
            <div class="subheader-separator subheader-separator-ver mt-2 mb-2 mr-4 bg-gray-200"></div>
            <span class="text-muted font-weight-bold mr-4">Create</span>
            <div class="subheader-separator subheader-separator-ver mt-2 mb-2 mr-4 bg-gray-200"></div>
            <div class="col-offset-1">
                <a asp-controller="Machine" asp-action="Index" class="btn btn-light-primary btn-sm"><i class="fa fa-arrow-circle-left"></i>Back to Index</a>
            </div>
            <!--end:Actions-->
        </div>
        <!--end:PageInfo-->

    </div>
</div>
<!--end:PageHeader-->
<!--begin:PageContent-->
<div class="d-flex flex-column-fluid">
    <!--begin::Container-->
    <div class="container">

        <!--begin::Row-->
        <div class="row">
            <div class="col-12">
                <div class="card card-custom card-stretch gutter-b">
                    <div class="card-body">

                        <!--begin:Row-->
                        <div class="row align-items-center mb-4">
                            <div class="col-12">
                                <!--begin:Form-->
                                <form asp-controller="Machine" asp-action="Create">
                                    <!--begin:Fields-->
                                    <div class="form-group">
                                        <label asp-for="Name"></label>
                                        <div>
                                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control col-5" })
                                            @Html.ValidationMessageFor(model => model.Name, String.Empty, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-2">
                                                <label asp-for="IsActive"></label>
                                                <div>
                                                    @Html.CheckBoxFor(model => model.IsActive)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--begin:Fields-->
                                    <!--begin:Action-->
                                    <div class="form-group">
                                        <div class="col-md-offset-1 col-md-10">
                                            <button class="btn btn-light btn-sm" type="reset">Cancel</button>
                                            <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-save"></i><span>Create</span></button>
                                        </div>
                                    </div>
                                    <!--begin:Action-->
                                </form>
                                <!--end:Form-->
                            </div>
                        </div>
                        <!--end:Row-->
                    </div>
                </div>
            </div>
        </div>
        <!--end::Row-->

    </div>
    <!--end::Container-->
</div>
<!--end:PageContent-->
<!--begin:PageScript-->
@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        //Page Message
        var message = '@TempData["Message"]';
    </script>

}

<!--end:PageScript-->
